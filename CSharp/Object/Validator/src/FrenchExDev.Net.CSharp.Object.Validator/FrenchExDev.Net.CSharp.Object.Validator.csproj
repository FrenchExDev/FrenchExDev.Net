<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Version>0.0.1</Version>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>Tiny Object validator interface in .NET</Description>
		<Copyright>FrenchExDev</Copyright>
		<PackageProjectUrl></PackageProjectUrl>
		<RepositoryUrl>https://www.github.com/FrenchExDev.Net/FrenchExDev.Net</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>object validator pattern</PackageTags>
		<IncludeSymbols>True</IncludeSymbols>
		<EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="..\..\README.md" Link="README.md" Pack="true" PackagePath="README.md" />
		<Content Include="..\..\LICENSE" Link="LICENSE" Pack="true" PackagePath="LICENSE" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration) == 'Release'">
		<PackageReference Include="FrenchExDev.Net.CSharp.Object.Validator.Abstractions" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration) == 'Debug'">
		<ProjectReference Include="..\FrenchExDev.Net.CSharp.Object.Validator.Abstractions\FrenchExDev.Net.CSharp.Object.Validator.Abstractions.csproj" />
	</ItemGroup>

</Project>
